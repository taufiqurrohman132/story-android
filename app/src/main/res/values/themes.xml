<resources>
    <!-- Base application theme. -->
    <style name="Theme.InstogramApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/color_base</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="elevationOverlayEnabled">true</item>
        <!-- background layout. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/white</item>      <!-- search bar color dll . -->
        <item name="android:colorBackground">@color/white</item>>

        <!--        snakbar-->
        <item name="snackbarStyle">@style/MySnackbar</item>
        <item name="snackbarButtonStyle">@style/MySnackbarText</item>




    </style>

    <style name="Text.Header24" parent="Theme.InstogramApplication">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.JudulBerita18" parent="Theme.InstogramApplication">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Subjudul16" parent="Theme.InstogramApplication">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Konten14" parent="Theme.InstogramApplication">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Konten15" parent="Theme.InstogramApplication">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Header22_appbar" parent="Theme.InstogramApplication">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item><!-- sesuai kebutuhan -->
    </style>

    <style name="Theme.InstogramApplication.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.InstogramApplication.AppWidgetContainer" parent="Theme.InstogramApplication.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

    <style name="Icon" parent="Theme.InstogramApplication">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <!--        <item name="android:padding">16dp</item>-->
    </style>

    <style name="MySnackbar" parent="@style/Widget.Material3.Snackbar">
        <item name="shapeAppearance">@style/ShapeAppearance.MySnackbar</item>
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="MySnackbarText" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/kuning_terang</item>
    </style>

    <style name="ShapeAppearance.MySnackbar" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- radius snackbar -->
    </style>

</resources>